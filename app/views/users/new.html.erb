<h1>Create a new user!</h1>
<div id="sign-up-container">
<!-- username email password -->
  <%= form_for @user do |f| %>
    <%= f.label :username %>
    <br>
    <%= f.text_field :username %>
    <br>
    <!-- note that this is a password field, dont mess this up! -->
    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
    <br>

    <%= f.label :password_confirmation %>
    <br>
    <%= f.password_field :password_confirmation %>
    <br>
    <%= f.submit %>
  <% end %>

  <h6><%= link_to "Already Have an account? Log In", log_in_path %></h6>

</div>
